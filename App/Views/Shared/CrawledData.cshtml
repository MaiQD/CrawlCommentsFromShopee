@model IList<Rating>
@{
	Layout = null;
	int i = 0;
}
@if (Model != null && Model.Count > 0)
{
	<table  class="table">
		<thead  class="thead-dark">
			<tr>
				<th scope="col">Stt</th>
				<th scope="col">Rating star</th>
				<th scope="col">Comment</th>
			</tr>
		</thead>
		<tbody>

			@foreach (var item in Model)
			{
			<tr>
				<th scope="row">@(++i)</th>
				<td class="row">
					@for (int star = 0; star < 5; star++)
					{
						if (star < item.rating_star)
						{
							<span class="fa fa-star checked"></span>
						}
						else
						{
							<span class="fa fa-star"></span>
						}
					}
				</td>
				<td>@item.comment</td>
			</tr>
			}


		</tbody>
	</table>
}
else
{
	<text>There are no comments in this product</text>

}
<style>
	.checked {
		color: orange;
	}
</style>